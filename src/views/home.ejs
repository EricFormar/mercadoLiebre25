<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title"><%= newest.name %></h2>
			</div>
			<!-- Show the "visited" products -->
			<% newest.products.forEach((product) => { %>
				<%- include('./partials/productCard',{
					...product.dataValues
				}) %>
			
		   <% }) %>
			
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title"><%= inSale.name %></h2>
			</div>
			<!-- Show the "in-sale" products -->
			<% inSale.products.forEach((product) => { %>
				<%- include('./partials/productCard',{
					...product.dataValues
				}) %>
				
			   <% }) %>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>