<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Detalle del producto'}) %>
<body>
	<!-- Header -->
	 <% if (!locals.admin) { %>
		<%- include('../partials/header') %>
	 <% } %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Detalle del producto: <%= name %></h2>
			</div>
		</div>
		<div class="product-detail">
			<div class="row">
				<div class="col-12 col-lg-8">
					<img src="/images/products/<%= image %>" alt="product image" class="product-detail-img">
					
					<p class="product-detail-description">
						<%= description %> 
					</p>
				</div>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h2 class="product-detail-title"><%= name %> </h2>
						<% if (discount > 0) { %>
							<p class="product-detail-price small">
								<span>$<%= price %></span>
								/
								<b><%= discount %>% OFF</b>
							</p>
							<p class="product-detail-price">
								$<%= toThousand(price - (price * discount) /100) %>
							</p>
						<% }else{ %>
							
							<p class="product-detail-price">
								$<%= toThousand(price) %>
							</p>
							<% } %>
						<ul class="actions-list">
							<li>
								<i class="fas fa-credit-card"></i>
								<p>Pag√° en 12 cuotas sin interes</p>
							</li>
							<li>
								<i class="fas fa-store"></i>
								<p>Retiro gratis en locales del vendedor</p>
							</li>
						</ul>

						<a href="#" class="buy-now-button">COMPRAR AHORA</a>
					</article>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<% if (!locals.admin) { %>
		<%- include('../partials/footer') %>
	<% } %>
	<!-- /footer -->

</body>	
</html>